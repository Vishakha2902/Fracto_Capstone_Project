{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=FractoDbDev;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },

  "JwtSettings": {
    "Secret": "ReplaceWithAStrongLongSecretForJwtTokenGeneration_ChangeInDevelopmentOnly",
    "Issuer": "FractoApi",
    "Audience": "FractoClient",
    "ExpiryMinutes": 120
  },

  "Cors": {
    "AllowedOrigins": [ "http://localhost:4200" ]
  },

  "FileUpload": {
    "UploadRoot": "wwwroot/uploads"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
